@page
@model Learn_Earn.Pages.Profesori.NotificationsModel

<h2>Notificări studenți</h2>

@if (Model.Notifications?.Any() ?? false)
{
    <div class="list-group">
        @foreach (var n in Model.Notifications)
        {
            <div class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                    <div><strong>@n.StudentUserId</strong> a finalizat lecția ID @n.LessonId</div>
                    <div class="text-muted" style="font-size:0.85em">@n.CreatedAt.ToString("g")</div>
                </div>
                <div>
                    <a class="btn btn-sm btn-primary" asp-page="/Lectii/Details" asp-route-id="@n.LessonId" asp-route-notificationId="@n.Id">Dă quiz</a>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info">Nu există notificări curente.</div>
}
