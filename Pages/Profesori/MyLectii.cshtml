@page
@model Learn_Earn.Pages.Profesori.MyLectiiModel
@{
    ViewData["Title"] = "My lessons";
}

<h1>My lessons</h1>

<p>
    <a class="btn btn-primary" asp-page="/Lectii/Create">Add lesson</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Language</th>
            <th>Difficulty</th>
            <th>Duration</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach(var l in Model.Lessons)
    {
        <tr>
            <td>@l.Title</td>
            <td>@l.Language</td>
            <td>@l.Difficulty</td>
            <td>@l.DurationMinutes</td>
            <td>
                <a class="btn btn-sm btn-outline-primary" asp-page="/Lectii/Edit" asp-route-id="@l.Id">Edit</a>
                <a class="btn btn-sm btn-outline-danger ms-2" asp-page="/Lectii/Delete" asp-route-id="@l.Id">Delete</a>
                <a class="btn btn-sm btn-outline-secondary ms-2" asp-page="/Lectii/Details" asp-route-id="@l.Id">View</a>
            </td>
        </tr>
    }
    </tbody>
</table>
