@page
@model Learn_Earn.Pages.Profesori.MyLectiiModel
@{
    ViewData["Title"] = "Lectiile mele";
}

<h1>Lectiile mele</h1>

<p>
    <a class="btn btn-primary" asp-page="/Lectii/Create">Adauga Lecție</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Titlu</th>
            <th>Limbă</th>
            <th>Dificultate</th>
            <th>Durată</th>
            <th>Acțiuni</th>
        </tr>
    </thead>
    <tbody>
    @foreach(var l in Model.Lessons)
    {
        <tr>
            <td>@l.Title</td>
            <td>@l.Language</td>
            <td>@l.Difficulty</td>
            <td>@l.DurationMinutes</td>
            <td>
                <a class="btn btn-sm btn-outline-primary" asp-page="/Lectii/Edit" asp-route-id="@l.Id">Editeaza</a>
                <a class="btn btn-sm btn-outline-danger ms-2" asp-page="/Lectii/Delete" asp-route-id="@l.Id">Sterge</a>
                <a class="btn btn-sm btn-outline-secondary ms-2" asp-page="/Lectii/Details" asp-route-id="@l.Id">Vezi</a>
            </td>
        </tr>
    }
    </tbody>
</table>
