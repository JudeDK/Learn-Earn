@page
@model Learn_Earn.Pages.Profile.IndexModel

<h2>Profile</h2>

<p><strong>Level:</strong> @Model.Level</p>
@if (Model.Xp != null)
{
    <p><strong>Total XP:</strong> @Model.Xp.TotalXp</p>
    <p><strong>XP to next level:</strong> @Model.XpToNext</p>
}
else
{
    <p>Total XP: 0</p>
    <p><strong>XP to next level:</strong> @Model.XpToNext</p>
}

<div class="mb-3" style="max-width:420px;">
    <div class="d-flex justify-content-between mb-1">
        <small>Progress to level @(Model.Level + 1)</small>
        @{
            var totalXp = Model.Xp?.TotalXp ?? 0;
            var currentLevelXp = totalXp - Model.LevelMinXp;
            if (currentLevelXp < 0) currentLevelXp = 0;
            var levelRange = Model.NextLevelXp - Model.LevelMinXp;
        }
        <small>
            <strong>
                @Model.ProgressPercent%
                (@currentLevelXp/@levelRange XP this level)
            </strong>
        </small>
    </div>
    <div class="progress" style="height:20px;">
        <div class="progress-bar" role="progressbar" style="width:@Model.ProgressPercent%" aria-valuenow="@Model.ProgressPercent" aria-valuemin="0" aria-valuemax="100">
            @Model.ProgressPercent%
        </div>
    </div>
</div>

<h3>Achievements</h3>
<div class="card p-3 mb-3">
    <p>Badges earned for achievements and streaks.</p>
    @if (Model.Badges?.Any() ?? false)
    {
        <div class="d-flex flex-wrap">
            @foreach (var b in Model.Badges)
            {
                <div class="badge-card m-2 p-2 border rounded" style="min-width:140px;">
                    <div><strong>@b.Name</strong></div>
                    <div class="text-muted" style="font-size:0.85em">@b.AwardedAt.ToString("g")</div>
                </div>
            }
        </div>
    }
    else
    {
        <p>You have no achievements yet. Start a lesson to earn your first badge!</p>
    }
</div>

