@page
@model Learn_Earn.Pages.Quizzes.CreateModel

<h2>Create Quiz</h2>

<form method="post">
    <div>
        <label>Title</label>
        <input asp-for="Quiz.Title" />
    </div>
    <div>
        <label>Lesson Id (optional)</label>
        <input asp-for="Quiz.LessonId" />
    </div>
    <div>
        <label>Duration (minutes)</label>
        <input asp-for="Quiz.DurationMinutes" />
    </div>
    <button type="submit">Create</button>
</form>
