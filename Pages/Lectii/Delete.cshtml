@page "{id:int}"
@model Learn_Earn.Pages.Lectii.DeleteModel
@{
    ViewData["Title"] = "Delete lesson";
}

<h1>Delete lesson</h1>

<div class="alert alert-danger">Are you sure you want to delete this lesson?</div>

<dl class="row">
    <dt class="col-sm-2">Title</dt>
    <dd class="col-sm-10">@Model.Lesson?.Title</dd>

    <dt class="col-sm-2">Language</dt>
    <dd class="col-sm-10">@Model.Lesson?.Language</dd>

    <dt class="col-sm-2">Difficulty</dt>
    <dd class="col-sm-10">@Model.Lesson?.Difficulty</dd>
</dl>

<form method="post">
    <button class="btn btn-danger">Delete</button>
    <a asp-page="/Profesori/MyLectii" class="btn btn-secondary ms-2">Cancel</a>
    <input type="hidden" name="id" value="@Model.Lesson?.Id" />
</form>
